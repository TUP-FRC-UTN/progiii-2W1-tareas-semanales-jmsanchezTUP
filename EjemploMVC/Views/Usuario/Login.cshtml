@model EjemploMVC.Models.Usuario
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-sm-12">
        <h4>Ingrese al sistema</h4>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6" control-label>Nombre de usuario</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombreUsuario, htmlAttributes: new { @class = "form-control", id = "txtNombreUsuario" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6" control-label>Contraseña</label>
                    <div class="col-sm-6">
                        @Html.PasswordFor(model => model.password, htmlAttributes: new { @class = "form-control", id = "txtPassword" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" type="submit">
                            Ingresar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
